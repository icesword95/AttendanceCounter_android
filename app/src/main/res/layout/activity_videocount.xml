<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="视频签到"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/title_videocount"
        android:background="#66ddcc"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="签到日期"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_videocount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:id="@+id/textView_videocount_1"
        />


    <TextView
        android:id="@+id/textView_videocount_2"
        android:text="2016.11.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView_videocount_1"
        android:layout_alignBottom="@+id/textView_videocount_1"
        android:layout_toRightOf="@+id/textView_videocount_1"
        android:layout_toEndOf="@+id/textView_videocount_1"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />
    <TextView
        android:text="已签到人数"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView_videocount_3"
        android:layout_below="@+id/textView_videocount_1"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@+id/textView_videocount_1"
        android:layout_alignStart="@+id/textView_videocount_1"
        />

    <TextView
        android:text="3/11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView_videocount_4"
        android:layout_alignBaseline="@+id/textView_videocount_3"
        android:layout_alignBottom="@+id/textView_videocount_3"
        android:layout_alignLeft="@+id/textView_videocount_2"
        android:layout_alignStart="@+id/textView_videocount_2" />

    <ListView

        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/textView_videocount_3">

    </ListView>
    <Button
        android:id="@+id/button_videocount_1"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="开始拍摄"
        android:background="@color/colorButton"
        android:layout_below="@android:id/list"
        android:layout_marginTop="10dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/button_videocount_2"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="结束签到"
        android:background="@color/colorButton"
        android:layout_alignTop="@id/button_videocount_1"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>